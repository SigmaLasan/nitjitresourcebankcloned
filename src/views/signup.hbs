<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account - IT Resource Bank</title>
    
    <!-- Favicons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144"
        href="https://www.nitj.ac.in//images/ico/apple-touch-icon-144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114"
        href="https://www.nitj.ac.in//images/ico/apple-touch-icon-114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72"
        href="https://www.nitj.ac.in//images/ico/apple-touch-icon-72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed"
        href="https://www.nitj.ac.in//images/ico/apple-touch-icon-57-precomposed.png" />
    <link rel="shortcut icon" href="https://www.nitj.ac.in//images/ico/favicon.ico" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/signup.css">
</head>
<body>
    <div class="signup-container">
        <!-- Left Panel - Branding -->
        <div class="branding-panel">
            <div class="branding-content">
                <div class="logo-section">
                    <img src="img/NitJ_Logo.png" alt="NITJ Logo" class="logo">
                    <div class="brand-text">
                        <h1>NIT Jalandhar</h1>
                        <h2>Information Technology</h2>
                        <h3>Resource Bank</h3>
                    </div>
                </div>
                <div class="brand-description">
                    <p>Join our academic community and gain access to comprehensive educational resources, course materials, and collaborative tools.</p>
                </div>
                <div class="features">
                    <div class="feature-item">
                        <i class="fas fa-shield-alt"></i>
                        <span>Secure Access</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-download"></i>
                        <span>Resource Downloads</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-comments"></i>
                        <span>Faculty Support</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Panel - Signup Form -->
        <div class="form-panel">
            <div class="form-container">
                <div class="form-header">
                    <h2>Create Account</h2>
                    <p>Join the IT Resource Bank community</p>
                </div>
                
                <form id="signupForm" class="signup-form" method="POST" action="/signup" autocomplete="off">
                    <input id="problem" value="{{problem}}" hidden />
                    
                    <!-- Email Field -->
                    <div class="form-group">
                        <label for="signupEmail" class="form-label">NITJ Email Address</label>
                        <div class="input-container">
                            <i class="fas fa-envelope input-icon"></i>
                            <input 
                                id="signupEmail" 
                                name="mail" 
                                type="email" 
                                value="{{username}}" 
                                required
                                placeholder="Enter your NITJ email"
                                class="form-input"
                            />
                        </div>
                        <p class="error-msg" id="error_box_email"></p>
                    </div>
                    
                    <!-- New Password Field -->
                    <div class="form-group">
                        <label for="newPassword" class="form-label">New Password</label>
                        <div class="input-container">
                            <i class="fas fa-lock input-icon"></i>
                            <input 
                                id="newPassword" 
                                name="newPass" 
                                type="password" 
                                required
                                placeholder="Create a strong password"
                                class="form-input"
                            />
                            <button type="button" class="password-toggle" id="newPasswordToggle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <p class="error-msg" id="error_box_newpass"></p>
                    </div>
                    
                    <!-- Confirm Password Field -->
                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <div class="input-container">
                            <i class="fas fa-lock input-icon"></i>
                            <input 
                                id="confirmPassword" 
                                name="confirmPass" 
                                type="password" 
                                required
                                placeholder="Confirm your password"
                                class="form-input"
                            />
                            <button type="button" class="password-toggle" id="confirmPasswordToggle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <p class="error-msg" id="error_box_confirmpass"></p>
                    </div>
                    
                    <!-- Captcha Field -->
                    <div class="form-group">
                        <label for="captchaInput" class="form-label">Security Verification</label>
                        <div class="captcha-container">
                            <div class="captcha-display">
                                <span id="captchaText">Loading...</span>
                                <button type="button" id="refreshCaptcha" class="refresh-captcha">
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                            </div>
                            <div class="input-container">
                                <i class="fas fa-shield-alt input-icon"></i>
                                <input 
                                    id="captchaInput" 
                                    name="captcha" 
                                    type="text" 
                                    required
                                    placeholder="Enter the code above"
                                    class="form-input"
                                    maxlength="6"
                                />
                            </div>
                        </div>
                        <p class="error-msg" id="error_box_captcha"></p>
                    </div>
                    
                    <!-- Terms and Conditions -->
                    <div class="form-group">
                        <label class="checkbox-container">
                            <input type="checkbox" id="agreeTerms" required>
                            <span class="checkmark"></span>
                            I agree to the <a href="#" class="terms-link" onclick="showTermsModal()">Terms & Conditions</a> and <a href="#" class="privacy-link" onclick="showPrivacyModal()">Privacy Policy</a>
                        </label>
                    </div>
                    
                    <!-- Submit Button -->
                    <button type="submit" id="signupBtn" class="submit-btn">
                        <span class="btn-text">Create Account</span>
                        <div class="btn-loader" style="display: none;">
                            <div class="spinner"></div>
                        </div>
                    </button>
                </form>
                
                <!-- Sign In Link -->
                <div class="signin-section">
                    <p>Already have an account? <a href="/login" class="signin-link">Sign In</a></p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- JavaScript -->
    <script src="js/signup.js"></script>
    
    <!-- Terms & Conditions Modal -->
    <div id="termsModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-file-contract"></i> Terms & Conditions</h2>
                <span class="close" onclick="closeModal('termsModal')">&times;</span>
            </div>
            <div class="modal-body">
                <h3>1. Acceptance of Terms</h3>
                <p>By accessing and using the IT Resource Bank platform, you accept and agree to be bound by the terms and provision of this agreement.</p>
                
                <h3>2. User Eligibility</h3>
                <p>This platform is exclusively for students, faculty, and staff of Dr B R Ambedkar National Institute of Technology Jalandhar. Users must have a valid NITJ email address (@nitj.ac.in) to register and access the platform.</p>
                
                <h3>3. Account Registration</h3>
                <p>You agree to provide accurate, current, and complete information during registration and maintain the security of your account credentials.</p>
                
                <h3>4. Acceptable Use Policy</h3>
                <p>You agree to use the platform only for lawful purposes and not to upload, post, or transmit any content that is harmful, offensive, or inappropriate.</p>
                
                <h3>5. Content and Resources</h3>
                <p>The platform provides access to educational resources. Users may download and use resources for personal academic purposes and share with other NITJ students and faculty.</p>
                
                <h3>6. Contact Information</h3>
                <p>For questions about these Terms & Conditions, contact us at: <strong>resourcebank.it@nitj.ac.in</strong></p>
            </div>
        </div>
    </div>
    
    <!-- Privacy Policy Modal -->
    <div id="privacyModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-shield-alt"></i> Privacy Policy</h2>
                <span class="close" onclick="closeModal('privacyModal')">&times;</span>
            </div>
            <div class="modal-body">
                <h3>1. Information We Collect</h3>
                <p>We collect information you provide directly to us, such as when you create an account, upload content, or contact us. This includes your NITJ email address, academic information, and account credentials.</p>
                
                <h3>2. How We Use Your Information</h3>
                <p>We use the information to provide, maintain, and improve our services, process your registration, send important updates, and ensure platform security.</p>
                
                <h3>3. Information Sharing</h3>
                <p>We do not sell, trade, or otherwise transfer your personal information to third parties except with your explicit consent or to comply with legal obligations.</p>
                
                <h3>4. Data Security</h3>
                <p>We implement appropriate security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction.</p>
                
                <h3>5. Your Rights</h3>
                <p>You have the right to access and review your personal information, update your account information, and request deletion of your account and associated data.</p>
                
                <h3>6. Contact Us</h3>
                <p>For questions about this Privacy Policy, contact us at: <strong>resourcebank.it@nitj.ac.in</strong></p>
            </div>
        </div>
    </div>
    
    <style>
        .modal {
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
        }
        
        .modal-content {
            background-color: rgba(255, 255, 255, 0.95);
            margin: 5% auto;
            padding: 0;
            border-radius: 20px;
            width: 90%;
            max-width: 600px;
            max-height: 80vh;
            overflow-y: auto;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }
        
        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 30px;
            border-bottom: 2px solid #3b82f6;
            background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
            color: white;
            border-radius: 20px 20px 0 0;
        }
        
        .modal-header h2 {
            margin: 0;
            font-size: 20px;
            font-weight: 600;
        }
        
        .close {
            color: white;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            transition: opacity 0.3s ease;
        }
        
        .close:hover {
            opacity: 0.7;
        }
        
        .modal-body {
            padding: 30px;
            line-height: 1.6;
        }
        
        .modal-body h3 {
            color: #3b82f6;
            font-weight: 600;
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 16px;
        }
        
        .modal-body p {
            margin-bottom: 15px;
            color: #333;
            text-align: justify;
        }
        
        .modal-body strong {
            color: #3b82f6;
        }
        
        @media (max-width: 768px) {
            .modal-content {
                width: 95%;
                margin: 10% auto;
            }
            
            .modal-header {
                padding: 15px 20px;
            }
            
            .modal-body {
                padding: 20px;
            }
        }
    </style>
    
    <script>
        function showTermsModal() {
            document.getElementById('termsModal').style.display = 'block';
        }
        
        function showPrivacyModal() {
            document.getElementById('privacyModal').style.display = 'block';
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }
        
        // Close modal when clicking outside of it
        window.onclick = function(event) {
            const termsModal = document.getElementById('termsModal');
            const privacyModal = document.getElementById('privacyModal');
            
            if (event.target === termsModal) {
                termsModal.style.display = 'none';
            }
            if (event.target === privacyModal) {
                privacyModal.style.display = 'none';
            }
        }
        
        // Close modal with Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                document.getElementById('termsModal').style.display = 'none';
                document.getElementById('privacyModal').style.display = 'none';
            }
        });
    </script>
</body>
</html> 